# ===========================================
# GROOMUP BACKEND - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to application-prod.properties for production

# Server Configuration
PORT=8080

# Database Configuration (REQUIRED)
DATABASE_URL=jdbc:mysql://your-production-host:3306/groomup?useSSL=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password
DB_POOL_SIZE=20

# JPA Configuration
JPA_DDL_AUTO=validate
SHOW_SQL=false

# JWT Configuration (REQUIRED - Generate secure 256-bit key)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_256_bit_secure_secret_key_here
JWT_EXPIRATION=3600000

# Razorpay Configuration (REQUIRED)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Application Mode
APP_ENV=production
