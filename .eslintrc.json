{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": "off",
    "react-hooks/set-state-in-effect": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "varsIgnorePattern": "^[A-Z_]"
      }
    ]
  }
}
